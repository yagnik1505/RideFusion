@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-12">
            <h2><i class="fas fa-tachometer-alt"></i> Admin Dashboard</h2>
            <p class="text-muted">Overview of the RideFusion platform</p>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>@ViewBag.TotalUsers</h4>
                            <p class="mb-0">Total Users</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-users fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>@ViewBag.TotalRides</h4>
                            <p class="mb-0">Total Rides</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-car fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>@ViewBag.TotalBookings</h4>
                            <p class="mb-0">Total Bookings</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-bookmark fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>@ViewBag.PendingBookings</h4>
                            <p class="mb-0">Pending Bookings</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-clock fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-cog"></i> Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="Users" class="btn btn-outline-primary">
                            <i class="fas fa-users"></i> Manage Users
                        </a>
                        <a asp-action="Rides" class="btn btn-outline-success">
                            <i class="fas fa-car"></i> Manage Rides
                        </a>
                        <a asp-action="Bookings" class="btn btn-outline-info">
                            <i class="fas fa-bookmark"></i> View Bookings
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-chart-line"></i> Platform Statistics</h5>
                </div>
                <div class="card-body">
                    <p class="mb-2">
                        <strong>Active Users:</strong> @ViewBag.TotalUsers
                    </p>
                    <p class="mb-2">
                        <strong>Rides Posted:</strong> @ViewBag.TotalRides
                    </p>
                    <p class="mb-2">
                        <strong>Successful Bookings:</strong> @ViewBag.TotalBookings
                    </p>
                    <p class="mb-0">
                        <strong>Pending Approvals:</strong> @ViewBag.PendingBookings
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-fontawesome-kit.js" crossorigin="anonymous"></script>
}
