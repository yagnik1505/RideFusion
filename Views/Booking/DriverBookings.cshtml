@model IEnumerable<RideFusion.Models.Booking>
@{
    ViewData["Title"] = "Manage Bookings";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-12">
            <h2><i class="fas fa-users"></i> Manage Bookings</h2>
            <p class="text-muted">Review and manage passenger booking requests for your ride</p>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var booking in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h6 class="card-title">
                                    <i class="fas fa-user"></i> @booking.Passenger.FullName
                                </h6>
                                <span class="badge @(booking.Status switch {
                                    "Confirmed" => "bg-success",
                                    "Pending" => "bg-warning",
                                    "Cancelled" => "bg-danger",
                                    _ => "bg-secondary"
                                })">
                                    @booking.Status
                                </span>
                            </div>
                            
                            <p class="card-text">
                                <small class="text-muted">
                                    <i class="fas fa-envelope"></i> @booking.Passenger.Email<br>
                                    <i class="fas fa-phone"></i> @booking.Passenger.PhoneNumber<br>
                                    <i class="fas fa-users"></i> Seats: @booking.SeatsBooked<br>
                                    <i class="fas fa-calendar"></i> Booked: @booking.CreatedAt.ToString("MMM dd, yyyy HH:mm")
                                </small>
                            </p>

                            <div class="mb-3">
                                <div class="d-flex justify-content-between">
                                    <span class="text-muted">Total Payment:</span>
                                    <strong class="text-success">&#8377;@(booking.Ride.PricePerSeat * booking.SeatsBooked)</strong>
                                </div>
                            </div>

                            @if (booking.Status == "Pending")
                            {
                                <div class="alert alert-warning alert-sm mb-3">
                                    <i class="fas fa-clock"></i>
                                    <small>Awaiting your approval</small>
                                </div>
                            }

                            @if (booking.IsVerified)
                            {
                                <div class="alert alert-success alert-sm mb-3">
                                    <i class="fas fa-check"></i>
                                    <small>OTP Verified</small>
                                </div>
                            }

                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    @if (booking.IsVerified)
                                    {
                                        <span class="badge bg-success">
                                            <i class="fas fa-shield-alt"></i> Verified
                                        </span>
                                    }
                                    else if (booking.Status == "Pending")
                                    {
                                        <span class="badge bg-warning">
                                            <i class="fas fa-exclamation-triangle"></i> Needs Verification
                                        </span>
                                    }
                                </div>
                                <div class="btn-group" role="group">
                                    @if (booking.Status == "Pending")
                                    {
                                        <form asp-action="Approve" method="post" class="d-inline">
                                            <input type="hidden" name="bookingId" value="@booking.BookingId" />
                                            <button type="submit" class="btn btn-success btn-sm">
                                                <i class="fas fa-check"></i> Approve
                                            </button>
                                        </form>
                                        <form asp-action="Reject" method="post" class="d-inline">
                                            <input type="hidden" name="bookingId" value="@booking.BookingId" />
                                            <button type="submit" class="btn btn-danger btn-sm" 
                                                    onclick="return confirm('Are you sure you want to reject this booking?')">
                                                <i class="fas fa-times"></i> Reject
                                            </button>
                                        </form>
                                    }
                                    else if (booking.Status == "Confirmed")
                                    {
                                        <span class="text-success">
                                            <i class="fas fa-check-circle"></i> Approved
                                        </span>
                                    }
                                    else if (booking.Status == "Cancelled")
                                    {
                                        <span class="text-danger">
                                            <i class="fas fa-times-circle"></i> Rejected
                                        </span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h5><i class="fas fa-chart-bar"></i> Booking Summary</h5>
                        <div class="row text-center">
                            <div class="col-md-3">
                                <h4 class="text-warning">@Model.Count(b => b.Status == "Pending")</h4>
                                <small class="text-muted">Pending</small>
                            </div>
                            <div class="col-md-3">
                                <h4 class="text-success">@Model.Count(b => b.Status == "Confirmed")</h4>
                                <small class="text-muted">Confirmed</small>
                            </div>
                            <div class="col-md-3">
                                <h4 class="text-danger">@Model.Count(b => b.Status == "Cancelled")</h4>
                                <small class="text-muted">Cancelled</small>
                            </div>
                            <div class="col-md-3">
                                <h4 class="text-primary">&#8377;@Model.Sum(b => b.Status == "Confirmed" ? b.Ride.PricePerSeat * b.SeatsBooked : 0)</h4>
                                <small class="text-muted">Total Earnings</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="text-center py-5">
                    <i class="fas fa-users fa-5x text-muted mb-4"></i>
                    <h3>No bookings yet</h3>
                    <p class="text-muted">No passengers have booked your ride yet. Share your ride to get bookings!</p>
                    <a asp-controller="Ride" asp-action="MyRides" class="btn btn-primary">
                        <i class="fas fa-car"></i> View My Rides
                    </a>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-fontawesome-kit.js" crossorigin="anonymous"></script>
}
