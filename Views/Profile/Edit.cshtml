@model RideFusion.Controllers.ProfileController.ProfileInput
@{
    ViewData["Title"] = "Edit Profile";
    bool isDriver = ViewBag.IsDriver == true;
}

<div class="container py-3">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="fa fa-id-card me-2"></i>@ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">@TempData["Error"]</div>
                    }

                    <form asp-action="Edit" method="post" novalidate>
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="FullName" class="form-label"></label>
                                <input asp-for="FullName" class="form-control" />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="PhoneNumber" class="form-label"></label>
                                <input asp-for="PhoneNumber" class="form-control" type="tel" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="Address" class="form-label"></label>
                                <input asp-for="Address" class="form-control" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="DateOfBirth" class="form-label"></label>
                                <input asp-for="DateOfBirth" class="form-control" type="date" />
                                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Gender" class="form-label"></label>
                                <select asp-for="Gender" class="form-select">
                                    <option value="">Select</option>
                                    <option>Male</option>
                                    <option>Female</option>
                                    <option>Other</option>
                                </select>
                                <span asp-validation-for="Gender" class="text-danger"></span>
                            </div>
                        </div>

                        @if (isDriver)
                        {
                            <hr />
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label asp-for="UpiId" class="form-label"></label>
                                    <input asp-for="UpiId" class="form-control" placeholder="yourname@upi" />
                                    <span asp-validation-for="UpiId" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="IsAvailable" class="form-label"></label>
                                    <select asp-for="IsAvailable" class="form-select">
                                        <option value="">Not specified</option>
                                        <option value="true">Available</option>
                                        <option value="false">Unavailable</option>
                                    </select>
                                    <span asp-validation-for="IsAvailable" class="text-danger"></span>
                                </div>
                            </div>

                            <hr />
                            <div class="alert alert-info" role="alert">Driver Details</div>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label asp-for="VehicleDetails" class="form-label"></label>
                                    <input asp-for="VehicleDetails" class="form-control" />
                                    <span asp-validation-for="VehicleDetails" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row g-3 mt-1">
                                <div class="col-md-3">
                                    <label asp-for="VehicleMake" class="form-label">Vehicle Company</label>
                                    <input asp-for="VehicleMake" class="form-control" />
                                    <span asp-validation-for="VehicleMake" class="text-danger"></span>
                                </div>
                                <div class="col-md-3">
                                    <label asp-for="VehicleModel" class="form-label"></label>
                                    <input asp-for="VehicleModel" class="form-control" />
                                    <span asp-validation-for="VehicleModel" class="text-danger"></span>
                                </div>
                                <div class="col-md-2">
                                    <label asp-for="VehicleYear" class="form-label"></label>
                                    <input asp-for="VehicleYear" class="form-control" type="number" min="1900" max="2100" />
                                    <span asp-validation-for="VehicleYear" class="text-danger"></span>
                                </div>
                                <div class="col-md-2">
                                    <label asp-for="VehicleColor" class="form-label"></label>
                                    <input asp-for="VehicleColor" class="form-control" />
                                    <span asp-validation-for="VehicleColor" class="text-danger"></span>
                                </div>
                                <div class="col-md-2">
                                    <label asp-for="LicensePlate" class="form-label">Plate Number</label>
                                    <input asp-for="LicensePlate" class="form-control" />
                                    <span asp-validation-for="LicensePlate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row g-3 mt-1">
                                <div class="col-md-6">
                                    <label asp-for="DriversLicenseNumber" class="form-label"></label>
                                    <input asp-for="DriversLicenseNumber" class="form-control" />
                                    <span asp-validation-for="DriversLicenseNumber" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="DriversLicenseExpiry" class="form-label"></label>
                                    <input asp-for="DriversLicenseExpiry" class="form-control" type="date" />
                                    <span asp-validation-for="DriversLicenseExpiry" class="text-danger"></span>
                                </div>
                            </div>
                        }

                        <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />

                        <div class="d-flex gap-2 mt-4">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <a class="btn btn-secondary" href="@(!string.IsNullOrEmpty((string?)ViewBag.ReturnUrl) ? (string)ViewBag.ReturnUrl : Url.Action("Index","Home"))">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
